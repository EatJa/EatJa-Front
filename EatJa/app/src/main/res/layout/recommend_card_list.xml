<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recommend_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recommend_item_image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/dummy_image_foreground" />

        <TextView
            android:id="@+id/recommend_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식당"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_below="@id/recommend_item_image_view"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/recommend_item_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="박근원"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_above="@id/recommend_item_description"
            android:layout_toRightOf="@id/recommend_item_title"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" />


        <TextView
            android:id="@+id/recommend_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이곳의 햄버거는 뭔가 다르다. 미국에 와있는 듯 하다."
            android:textSize="15dp"
            android:layout_below="@id/recommend_item_title"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
