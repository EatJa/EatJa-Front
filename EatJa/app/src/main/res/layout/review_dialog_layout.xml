<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Shop Title -->
    <TextView
        android:id="@+id/shopTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Shop Tag -->
    <TextView
        android:id="@+id/shopTagTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/shopTitleTextView"
        android:layout_marginStart="8dp"
        android:layout_below="@id/shopTitleTextView"
        android:text="Shop Tag"
        android:textSize="14sp" />

    <!-- Review Image -->
    <ImageView
        android:id="@+id/reviewImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/shopTagTextView"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_launcher_foreground" />

    <!-- Reviewer Name -->
    <TextView
        android:id="@+id/reviewerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopTitleTextView"
        android:layout_above="@id/reviewImageView"
        android:text="Reviewer Name"
        android:textSize="14sp" />

    <!-- Review Description -->
    <TextView
        android:id="@+id/reviewDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewerNameTextView"
        android:layout_marginTop="8dp"
        android:minHeight="64dp"
        android:text="Review Description" />

</RelativeLayout>
